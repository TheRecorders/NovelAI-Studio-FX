<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<fx:root type="javafx.scene.layout.VBox" xmlns:fx="http://javafx.com/fxml" spacing="5.0">
    <Label fx:id="previewLabel" text="提示詞預覽"/>
    <TextArea fx:id="previewTextArea" styleClass="prompt-preview" VBox.vgrow="ALWAYS"/>
    <StackPane styleClass="token-progress-container">
        <ProgressBar fx:id="tokenProgressBar" styleClass="token-progress-bar" maxWidth="Infinity"/>
        <Label fx:id="tokenCountLabel" styleClass="token-count-label"/>
    </StackPane>
</fx:root>